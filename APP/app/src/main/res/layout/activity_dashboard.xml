<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_marginStart="153dp"
          >

            <!-- Circle Button -->

            <!-- Notification Badge (Number) -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notificationButton"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="@drawable/notification_icon"
                android:contentDescription="Notification Button"
                android:padding="16dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/notificationBubble"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/notification_bubble"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardbutton"
        android:layout_width="320sp"
        android:layout_height="150sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:layout_marginLeft="14sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Withdrawal"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow withdrawal of money using QR Code Scanning."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/walletTransfer"
        android:layout_width="320sp"
        android:layout_height="150sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:layout_marginLeft="14sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Transfer"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow token transfer"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- User Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/textViewUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name: "
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textViewUserNric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User NRIC: "
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textViewUserToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Token: "
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textViewUserBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Balance: "
            android:textSize="18sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
